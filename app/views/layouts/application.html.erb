<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header style="border-bottom: solid 1px black;">
      <ul>
        <% if admin_signed_in? %>
          <li>NaganoCake</li>
          <li><%= link_to "商品一覧", admin_products_path %></li>
          <li><%= link_to "会員一覧", admin_customers_path %></li>
          <li><%= link_to '注文履歴一覧', admin_path %></li>
          <li><%= link_to 'ジャンル一覧', admin_genres_path %></li>
          <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete %></li>
        <% elsif customer_signed_in? %>
          <li><%= link_to "NaganoCake", root_path %></li>
          <li>ようこそ、<%#= @customer.name %>さん！</li>
          <li><%= link_to "マイページ", customer_path(current_customer) %></li>
          <li><%= link_to "商品一覧", products_path %></li>
          <li><%= link_to 'カート', carts_items_path %></li>
          <li><%= link_to "ログアウト", destroy_customer_session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to "NaganoCake", root_path %></li>
          <li><%= link_to "About", about_path %></li>
          <li><%= link_to "商品一覧", products_path %></li>
          <li><%= link_to "新規登録", new_customer_registration_path %></li>
          <li><%= link_to "ログイン", new_customer_session_path %></li>
        <% end %>
      </ul>
    </header>
    
    <%= yield %>
    
    <footer>
      <div class="h-25" style="border-top: solid 1px black"><b>footer</b></div>
    </footer>
  </body>
</html>
