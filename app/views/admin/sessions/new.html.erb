<div class="container">
  <div class="row mt-4">
    <div class="col-md-2 offset-sm-1 d-flex justify-content-center" style="background-color: #EEEEEE;">
      <h5>管理者ログイン</h5>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <div class="row mt-5 d-flex justify-content-center">
        <div class="col-md-2">
          <%= f.label :メールアドレス %><br />
        </div>
        <div class="col-md-5">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 50 %>
        </div>
      </div>
    </div>

    <div class="field">
      <div class="row mt-4 d-flex justify-content-center">
        <div class="col-md-2">
          <%= f.label :パスワード %><br />
        </div>
        <div class="col-md-5">
          <%= f.password_field :password, autocomplete: "current-password", size: 50 %>
        </div>
      </div>
    </div>

    <div class="actions">
      <div class="row mt-5 d-flex justify-content-center">
        <input type="submit" name="commit" value="ログイン" class="btn btn-primary btn-sm" data-disable-with="ログイン">
      </div>
    </div>
  <% end %>

  <%= render "admin/shared/links" %>
</div>