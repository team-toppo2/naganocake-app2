<!-- form_with部分 -->
<div>
  <div>
    <h2>商品編集</h2>
    <%= form_with model:@product, local:true do |f| %>
      <div>
        <%= f.label :image, "商品画像：" %>
        <%= f.attachment_field :image %>
      </div>
      <div>
        <%= f.label :name, "商品名：" %>
        <%= f.text_field :name %>
      </div>
      <div>
        <%= f.label :discription, "商品説明：" %>
        <%= f.text_area :discription %>
      </div>
      <div>
        <%= f.label :genres, "ジャンル：" %>
        <!--ジャンルのdbに登録が必要-->
      </div>
      <div>
        <%= f.label :price, "税抜価格：" %>
        <%= f.text_field :price %>円
      </div>
      <div>
        <%= f.label :is_active, "販売ステータス：" %>
        <%= f.radio_button :is_active, true %>販売中 <%= f.radio_button :is_active, false %>販売停止中
      </div>
      <div>
        <%= f.submit '変更を保存' %>
        <% end %>
      </div>
  </div>
</div>