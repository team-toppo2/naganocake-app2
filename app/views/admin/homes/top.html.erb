<h2>admin top(注文履歴一覧)</h2>

<table>
  <tr>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
    <th>注文ステータス</th>
  </tr>
  <% @orders.each do |order| %>
  <tr>
    <td>
      <%= link_to admin_order_path(or) do %>
        <%= order.create_at %>
      <% end %>
    </td>
    <td><%= order.customer.last_name %><%= order.cut.first_name %></td>
    <td><%= order.order_product.amount %></td>
    <td><%= order.order_status %></td>
  </tr>
  <% end %>
  <%= paginate @orders %>
</table>