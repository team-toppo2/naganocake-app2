<h1>注文履歴詳細</h1>

<table>
  <tr>
    <th>購入者</th>
    <td>
      <%= link_to admin_customer_path(@order.customer_id) do %>
        <%= @order.customer.last_name %><%= @order.cut.first_name %>
      <% end %>
    </td>
  </tr>
  <tr>
    <th>注文日</th>
    <td><%= @order.created_at %></td>
  </tr>
  <tr>
    <th>配送先</th>
    <td>
      〒<%= @order.postal_code %><%= " " %><%= @order.address %><br>
      <%= @order.customer.last_name %><%= @order.customer.first_name %>
    </td>
  </tr>
  <tr>
    <th>支払方法</th>
    <td><%= @order.payment_method %></td>
  </tr>
  <tr>
    <th>注文ステータス</th>
    <td>
      <%= form_with model: @order, url:"/admin/orders/#{@order.id}" , method: :patch, local: true do |f| %>
        <%= f.select :order_status, Order.order_statuses_i18n.invert, {prompt: false}  %>
        <%= f.submit "更新" %>
      <% end %>
    </td>
  </tr>
</table>

<table>
  <tr>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th>製作ステータス</th>
  </tr>
  <% @order.order_products.each do |order_product| %>
  <tr>
    <td><%= order_product.product.name %></td>
    <td><%= order_product.product.price.add_tax_price %></td>
    <td><%= order_product.amount %></td>
    <td><%= order_product.subtotal %></td>
    <td>
      <%= form_with model: order_product, url:"/admin/order_details/#{order_product.id}" , method: :patch, local: true do |f| %>
        <%= f.select :product_status, OrderProduct.product_statuses_i18n.invert, {prompt: false}  %>
        <%= f.submit "更新" %>
      <% end %>
    </td>
  </tr>
  <% end %>
</table>

<table>
  <tr>
    <th>商品合計</th>
    <td><%= ？？？？？？？？？？？？？？？ %>円</td>
  </tr>
  <tr>
    <th>送料</th>
    <td><%= @order.shipping_cost %>円</td>
  </tr>
  <tr>
    <th>請求金額合計</th>
    <th><%= @order.final_price %>円</th>
  </tr>
</table>