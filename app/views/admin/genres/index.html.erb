<% if @genre.errors.any? %>
 <%= @genre.errors.count %>件のエラーが出ました
 <%= @genre.errors.full_messages.each do |message| %>
  <%= message %>
 <% end %>
<% end %>

<div class="ml-4">

 <h3 class="ml-4 mt-4">ジャンル一覧・追加</h2>

 <div class="my-5">
  <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
  <label class="mr-3">ジャンル名</label>
  <td><%= f.text_field :name, placeholder: "ジャンル名", class:"mr-3" %></td>
  <td><%= f.submit "新規登録", class: "btn btn-sm btn-success"  %></td>
  <% end %>
 </div>

 <table class="mb-5 table">
  <thead>
    <tr>
     <th class="table-secondary">ジャンル</th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre|%>
    <tr>
     <td><%= genre.name %></td>
     <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %></td>
    </tr>
    <% end %>
  </tbody>
 </table>
</div>