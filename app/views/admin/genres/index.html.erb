<% if @genre.errors.any? %>
 <%= @genre.errors.count %>件のエラーが出ました
 <%= @genre.errors.full_messages.each do |message| %>
  <%= message %>
 <% end %>
<% end %>

<h2>ジャンル一覧・追加</h2>

<div class="genre_form">
  <%#以下urlを指定しないとエラーが起きる%>
  <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
  <label for="genre_name">ジャンル名</label>
  <td><%= f.text_field :name, placeholder: "ジャンル名" %></td>
  <td><%= f.submit "新規登録", class: "btn btn-sm btn-success" %></td>
  <% end %>
</div>

<table class="table">
  <thead>
    <tr>
     <th>ジャンル</th>
    </tr>
  </thead>
  <tbody>
  <% @genres.each do |genre|%>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %></td>
    </tr>
  <% end %>
  </tbody>
</table>
