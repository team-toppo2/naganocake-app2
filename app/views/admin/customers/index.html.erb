<div class="container">
  <div class="row mt-4 ml-5" style="width: 800px;">
    <div class="col-md-auto offset-sm-1" style="background-color: #EEEEEE;">
      <h4>会員一覧</h4>
    </div>
  </div>

  <div class="row mt-3 justify-content-center">
    <div class="col-md-9">
      <table class="table table-bordered">
        <tr class="table-secondary">
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
        <% @customers.reverse_each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to customer.last_name,admin_customer_path(customer), class: "customer_#{customer.id}" %>
          <%= link_to customer.first_name,admin_customer_path(customer), class: "customer_#{customer.id}" %></td>
          <td><%= customer.email %></td>
          <td>
            <% if customer.is_deleted == false%>
              <b style="color: #32cd32;">有効</b>
            <% else %>
              <b style="color: #cccccc;">退会</b>
            <% end %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
  <div class="row mb-4 justify-content-center">
    <%= paginate @customers %>
  </div>
</div>