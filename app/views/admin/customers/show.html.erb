<div class="container">
  <div class="row mt-4 ml-2">
    <div class="col-md-auto offset-sm-1" style="background-color: #EEEEEE;">
      <h4><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h4>
    </div>
  </div>


  <table class="table table-borderless" style="margin: 20px 0 0 90px;">
    <tr>
  	  <th width="180">会員id</th>
  	  <td><%= @customer.id %></td>
    </tr>
    <tr>
  	  <th>氏名</th>
  	  <td><%= @customer.last_name %><%= @customer.first_name %></td>
    </tr>
    <tr>
  	  <th>フリガナ</th>
  	  <td><%= @customer.last_name_jp %><%= @customer.first_name_jp %></td>
    </tr>
    <tr>
  	  <th>郵便番号</th>
  	  <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
  	  <th>住所</th>
  	  <td><%= @customer.address %></td>
    </tr>
    <tr>
  	  <th>電話番号</th>
  	  <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
  	  <th>メールアドレス</th>
  	  <td><%= @customer.email %></td>
    </tr>
    <tr>
  	  <th>会員ステータス</th>
  	  <td>
  	  <% if @customer.is_deleted == false%>
        <b style="color: #32cd32;">有効</b>
      <% else %>
        <b style="color: #cccccc;">退会</b>
      <% end %>
      </td>
    </tr>
  </table>

  <div class="row mt-4 justify-content-center">
    <%= link_to '編集する', edit_admin_customer_path(@customer.id), class: 'btn btn-success', type:'button' %>
    <%= link_to '注文履歴一覧を見る', admin_path, class: 'btn btn-primary', type:'button', style: 'margin-left: 80px;' %>
  </div>