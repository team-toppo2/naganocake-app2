<div class="container">
  <div class="row">
    <h2>
      商品一覧<span>(全<%= @products.total_count %>件)</span>
    </h2>
    <div class="row row-cols-4 row-cols-auto">
      <% @products.each do |product| %>
        <div class="col">
          <%= link_to product_path(product.id) do %>
            <%= attachment_image_tag product, :image, :fill, 200, 200, fallback: "no_image.jpg" %>
            <p><%= product.name %></p>
          <% end %>
          <% if product.is_active == true %>
            <p>¥<%= product.price.to_s(:delimited) %></p>
          <% else %>
            <p>売切れ</p>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class='p-top__paginate'>
      <%= paginate @products %>
    </div>
  </div>
</div>