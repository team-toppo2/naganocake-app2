<div class="head">
  <h2>ショッピングカート</h2>
  <td><%= link_to"カートを空にする",  cart_items_all_destroy_path, method: :delete, date: {confirm: '本当に消しますか？'} %></td>

 <div class="cart_material">
 <thead>
   <tr>
    <td>商品名</td>
    <td>単価(税込)</td>
    <td>数量</td>
    <td>小計</td>
    <td></td>
  </tr>
 </thead>

 <tbody>
 <% @cart_items.each do |cart_item| %>
  <tr>
    <td><%= cart_item.product.name %></td>
    <td><%= cart_item.product.price.add_tax_price %></td>
    <td>
     <%= form_with model: cart_item, url:cart_item_path(cart_item), local: true, method: :patch do |f| %>
      <%= f.hidden_field :product_id, value: cart_item.product.id %>
      <%= f.select :amount,options_for_select((1..10).to_a),prompt: "cart_item.amount" %>
     <% end %>
    </td>
    <td><%= cart_item.subtotal %></td>
    <td><% link_to"削除", cart_item, method: :delete, date: {confirm: '本当に消しますか？'}, class: "destroy_#{cart_item}" %></td>
  </tr>
 <% end %>
 </tbody>
</div>
