<div class="container">
  <div class="row mt-4 ml-2 mb-3">
    <div class="col-md-auto offset-sm-1" style="background-color: #EEEEEE;">
      <h4>マイページ</h4>
    </div>
  </div>
  <table class="table table-borderless">
    <tr>
  	  <th width="120"><h5><b>登録情報</b></h5></th>
  	  <td><h5><%= link_to '編集する', edit_customer_path, class: 'btn btn-success btn-sm' %></h5></td>
    </tr>
  </table>
  <div class="row">
    <div class="col-md-8">
      <table class="mb-3 table table-bordered">
        <tr>
      	  <th width="120" class="table-secondary">氏名</th>
      	  <td width="350"><%= @customer.last_name %> <%= @customer.first_name %></td>
        </tr>
        <tr>
      	  <th class="table-secondary">カナ</th>
      	  <td><%= @customer.last_name_jp %> <%= @customer.first_name_jp %>
        </tr>
        <tr>
      	  <th class="table-secondary">郵便番号</th>
      	  <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
      	  <th class="table-secondary">住所</th>
      	  <td><%= @customer.address %></td>
        </tr>
        <tr>
      	  <th class="table-secondary">電話番号</th>
      	  <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
      	  <th class="table-secondary">メールアドレス</th>
      	  <td><%= @customer.email %></td>
        </tr>
      </table>
    </div>
  </div>

  <table class="table table-borderless">
    <tr>
  	  <th width="120"><h5><b>配送先</b></h5></th>
  	  <td><h5><%= link_to '一覧を見る', addresses_path, class: 'btn btn-primary btn-sm' %></h5></td>
    </tr>
    <tr>
  	  <th width="120"><h5><b>注文履歴</b></h5></th>
  	  <td><h5><%= link_to '一覧を見る', orders_path, class: 'btn btn-primary btn-sm' %></h5></td>
    </tr>
  </table>
</div>