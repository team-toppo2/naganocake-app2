<div class="container">
  <div class="row mt-4 ml-2">
    <div class="col-md-auto offset-sm-1" style="background-color: #EEEEEE;">
    <h2>会員情報編集</h2>
    </div>
  </div>



    <%= form_with model:@customer, local:true do |f| %>

　<div class="row">
    <div class="col-md-8">
      <table class="mb-3 table table-borderless">
      <tr>
        <td><%= f.label :"氏名" %></td>
        <td><%= f.text_field :last_name, class: "form-control last_name" %></td>
        <td><%= f.text_field :first_name, class: "form-control first_name" %></td>
      </tr>

     <tr>
        <td><%= f.label :"フリガナ" %></td>
        <td><%= f.text_field :last_name_jp, class: "form-control last_name_jp" %></td>
        <td><%= f.text_field :first_name_jp, class: "form-control first_name_jp" %></td>
      </tr>

      <tr>
        <td><%= f.label :"郵便番号" %></td>
        <td><%= f.text_field :postal_code, class: "form-control postal_code" %></td>
        <td></td>
      </tr>

      <tr>
        <td><%= f.label :"住所" %></td>
        <td colspan="3"><%= f.text_field :address, class: "form-control address", size: 56%></td>
        <td></td>
      </tr>

      <tr>
        <td><%= f.label :"電話番号" %></td>
        <td><%= f.text_field :telephone_number, class: "form-control telephone_number" %></td>
        <td></td>
      </tr>

      <tr>
        <td><%= f.label :"メールアドレス" %></td>
        <td><%= f.text_field :email, class: "form-control email" %></td>
        <td></td>
      </tr>

    </table>
  </div>
</div>

    <div class="row justify-content-center">
      <div class="col-md-4">
        <%= f.submit :編集内容を保存する, class: 'btn btn-sm btn-success' %>
      </div>
      <div class="col-md-4">
        <%= link_to '退会する', unsubscribe_path, class: "btn btn-sm btn-danger" %>
      </div>
    </div>
  <% end %>




