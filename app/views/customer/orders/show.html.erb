<h1>注文履歴詳細</h1>
<h2>注文情報</h2>
<table>
  <tr>
    <th>注文日</th>
    <td><%= @order.created_at %></td>
  </tr>
  <tr>
    <th>配送先</th>
    <td>
      〒<%= @order.postal_code %><br>
      <%= @order.postal_address %><br>
      <%= @order.postal_name %>
    </td>
  </tr>
  <tr>
    <th>支払方法</th>
    <th><%= @order.payment_method_i18n %></th>
  </tr>
  <tr>
    <th>ステータス</th>
    <th><%= @order.order_status %></th>
  </tr>
</table>

<h2>請求情報</h2>
<table>
  <tr>
    <td>商品合計</td>
    <td><%= @order.？？？？？？？？？？？？？？？ %></td>
  </tr>
  <tr>
    <td>配送料</td>
    <td><%= @order.shipping_cost %></td>
  </tr>
  <tr>
    <th>ご請求額</th>
    <th><%= @order.final_price %></th>
  </tr>
</table>

