<h1>注文履歴詳細</h1>
<h2>注文情報</h2>
<table class="table table-bordered">
  <tr>
    <th class="table-secondary">注文日</th>
    <td><%= @order.created_at %></td>
  </tr>
  <tr>
    <th class="table-secondary">配送先</th>
    <td>
      〒<%= @order.postal_code %><br>
      <%= @order.postal_address %><br>
      <%= @order.postal_name %>
    </td>
  </tr>
  <tr>
    <th class="table-secondary">支払方法</th>
    <th><%= @order.payment_method_i18n %></th>
  </tr>
  <tr>
    <th class="table-secondary">ステータス</th>
    <th><%= @order.order_status %></th>
  </tr>
</table>

<h2>請求情報</h2>
<table class="table table-bordered">
  <tr>
    <td class="table-secondary">商品合計</td>
    <td><%= @order.final_price.to_i - @order.shipping_cost.to_i %></td>
  </tr>
  <tr>
    <td class="table-secondary">配送料</td>
    <td><%= @order.shipping_cost %></td>
  </tr>
  <tr>
    <th class="table-secondary">ご請求額</th>
    <th><%= @order.final_price %></th>
  </tr>
</table>

<h2>注文内容</h2>
<table class="table table-bordered">
  <tr class="table-secondary">
    <th>商品</th>
    <th>単価(税込)</th>
    <th>個数</th>
    <th>小計</th>
  </tr>
  <% @order.order_products.each do |order_product| %>
  <tr>
    <td><%= order_product.product.name %></td>
    <td><%= order_product.product.price.add_tax_price %></td>
    <td><%= order_product.amount %></td>
    <td><%= order_product.product.price.add_tax_price.to_i * order_product.amount.to_i %></td>
  </tr>
  <% end %>
</table>