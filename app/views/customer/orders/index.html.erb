<div class="container">
  <div class="row mt-4 ml-2 mb-3">
    <div class="col-md-auto offset-sm-1" style="background-color: #EEEEEE;">
      <h4>注文履歴一覧</h4>
    </div>
  </div>

  <table class="table table-bordered">
    <tr class="table-secondary">
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
      <td>
        〒<%= order.postal_code %><br>
        <%= order.postal_address %><br>
        <%= order.postal_name %>
      </td>
      <td>
        <% order.order_products.each do |order_product| %>
          <%= order_product.product.name %><br>
        <% end %>
      </td>
      <td valign=middle><%= order.final_price %>円</td>
      <td><%= order.order_status_i18n %></td>
      <td><%= link_to "表示する", order_path(order), class: 'btn btn-primary btn-sm' %></td>
    </tr>
    <% end %>
  </table>
</div>