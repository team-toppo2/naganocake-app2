<h1>注文履歴一覧</h1>

<table>
  <tr>
    <th>注文日</th>
    <th>配送先</th>
    <th>注文商品</th>
    <th>支払金額</th>
    <th>ステータス</th>
    <th>注文詳細</th>
  </tr>
  <% @orders.each do |order| %>
  <tr>
    <td><%= order.created_at %></td>
    <td><%= order.potal_address %></td>
    <td>
      <% order.order_producs.each do |order_product| %> <!--sいる？-->
        <%= order_product.product.name %>
      <% end %>
    </td>
    <td><%= order.final_price %></td>
    <td><%= order.order_status %></td>
    <td><%= link_to "表示する", order_path(order) %></td>
  </tr>
  <% end %>
</table>