<h1>注文情報入力</h1>

<%= form_with model: @order, url: orders_comfirm_path, local:true do |f| %>
  <h2>支払方法</h2>
  <%= f.radio_button :payment_method, Order.payment_methods.key(0), checked: true %>
  <%= f.label :payment_method, "クレジットカード" %>
  <br>  <!--↑クレジットカード↑-->
  <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
  <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
        <!--↑銀行振り込み↑-->

  <h2>お届け先</h2>
  <%= f.radio_button :postal_address, Order.postal_addresses.key(0) %>
  <%= f.label :postal_address, Order.postal_addresses_i18n[:customer_add] %>
  〒<%= @customer.postal_code %><%= " " %><%= @customer.address %><%= " " %><%= @customer.last_name %><%= @customer.first_name %>
  <br>  <!--↑自身の住所↑-->
  <%= f.radio_button :postal_address, Order.postal_addresses.key(1) %>
  <%= f.label :postal_address, Order.postal_addresses_i18n[:register_add] %>
  <br>
  <%= f.select :postal_address_id, options_from_collection_for_select(current_customer.postal_addresses, :id, :full_address) %>
        <!--↑登録済み住所↑-->
  <br>
  <%= f.radio_button :postal_address, Order.postal_addresses.key(2) %>
  <%= f.label :postal_address, Order.postal_addresses_i18n[:new_add] %>
  <br>
  <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
  <%= f.text_field :postal_code, :placeholder => "0000000" %>
  <br>
  <%= f.label :postal_address, "住所" %>
  <%= f.text_field :postal_address, :placeholder => "東京都渋谷区代々木神園町0-0",  size: 40 %>
  <br>
  <%= f.label :postal_name, "宛名" %>
  <%= f.text_field :postal_name, :placeholder => "令和道子" %>
  <br>  <!--↑新しい住所↑-->
  <%= f.submit "確認画面へ進む" %>
<% end %>

