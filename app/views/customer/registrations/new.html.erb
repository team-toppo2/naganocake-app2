  <div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
    <h2>新規会員登録</h2>


<%= form_with model: @customer, url: customer_registration_path,id: 'new_customer', class: 'new_customer', local: true do |f| %>
<%= render "customer/shared/error_messages", resource: resource %>

  <div class="field">
    <div class="row mt-5 d-flex justify-content-center">
      <div class="col-md-1">
        <%= f.label :姓 %><br />
      </div>
      <div class="col-md-5">
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
      </div>
    </div>
  </div>
  <div class="field">
    <%= f.label :名 %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <%= f.label :セイ %><br />
    <%= f.text_field :last_name_jp, autofocus: true, autocomplete: "last_name_jp" %>
  </div>

  <div class="field">
    <%= f.label :メイ %><br />
    <%= f.text_field :first_name_jp, autofocus: true, autocomplete: "first_name_jp" %>
  </div>

  <div class="field">
    <div class="row mt-5 d-flex justify-content-center">
      <div class="col-md-6">
        <%= f.label :郵便番号（ハイフンなし） %><br />
      </div>
      <div class="col-md-5">
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
      </div>
    </div>
  </div>

  <div class="field">
    <div class="row mt-5 d-flex justify-content-center">
      <div class="col-md-6">
        <%= f.label :住所 %><br />
      </div>
      <div class="col-md-5">
        <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
      </div>
    </div>
  </div>

  <div class="field">
    <div class="row mt-5 d-flex justify-content-center">
      <div class="col-md-6">
        <%= f.label :電話番号（ハイフンなし） %><br />
      </div>
      <div class="col-md-5">
        <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
      </div>
    </div>
  </div>


  <div class="field">
    <div class="row mt-5 d-flex justify-content-center">
      <div class="col-md-6">
        <%= f.label :メールアドレス %><br />
      </div>
      <div class="col-md-5">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>
  </div>

  <div class="field">
    <div class="row mt-5 d-flex justify-content-center">
      <div class="col-md-6">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
      </div>
      <div class="col-md-5">
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </div>
  </div>

  <div class="field">
    <div class="row mt-5 d-flex justify-content-center">
      <div class="col-md-6">
        <%= f.label :パスワード（確認用） %><br />
      </div>
      <div class="col-md-5">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>
  </div>

  <div class="actions">
    <div class="row mt-5 d-flex justify-content-center">
      <div class="col-md-5">
        <input type="submit" name="commit" value="新規登録" class="btn btn-sm btn-success" data-disable-with="新規登録">
   　  </div>
    </div>
  </div>
<% end %></br>

<h3>既に登録済みの方</h3>
<p><%= link_to "こちら", customer_session_path %>からログインしてください</p>

