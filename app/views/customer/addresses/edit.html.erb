  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>配送先編集</h2>
          <%= form_with model:@postal_address,url: address_path, local:true do |f| %>
              <div class="form-group">
                <%= f.label "郵便番号（ハイフンなし）" %>
                <%= f.text_field "postal_code",class: "form-control code" %>
              </div>
              <div class="form-group">
                <%= f.label "住所" %>
                <%= f.text_field "postal_address",class: "form-control address" %>
              </div>
              <div class="form-group">
                <%= f.label "宛名" %>
                <%= f.text_field "postal_name",class: "form-control name" %>
              </div>
              <div class="form-group">
                <%= f.submit "変更内容を保存",class: "btn btn-success" %>
              </div>
          <% end %>
      </div>
    </div>
  </div>
