  <div>
    <h2>配送先編集</h2>
    <%= form_with model:@postal_address,url: address_path, local:true do |f| %>
      <div>
        <div>
          <%= f.label: "郵便番号（ハイフンなし）" %>
          <%= f.text_field: "postal_code" %>
        </div>
        <div>
          <%= f.label: "住所" %>
          <%= f.text_field: "postal_address" %>
        </div>
        <div>
          <%= f.label: "宛名" %>
          <%= f.text_field: "postal_name" %>
        </div>
        <div>
          <%= f.submit: "編集する" %>
        </div>
      </div>
    <% end %>
  </div>
