<div>
  <div>
    <h2>配送先登録/一覧</h2>
    <%= form_with model:@postal_address,url: addresses_path, local:true do |f| %>
    <div>
      <div>
        <%= f.label: "郵便番号（ハイフンなし）" %>
        <%= f.text_field: "postal_code" %>
      </div>
      <div>
        <%= f.label: "住所" %>
        <%= f.text_field: "postal_address" %>
      </div>
      <div>
         <%= f.label: "宛名" %>
        <%= f.text_field: "postal_name" %>
      </div>
      <div>
        <%= f.submit: "新規登録" %>
      </div>
      <% if @postal_addresses.present? %>
        <div>
          <table>
            <thead>
              <tr>
                <th>郵便番号</th>
                <th>住所</th>
                <th>宛名</th>
                <th colspan = "2"></th>
              </tr>
            </thead>
            <tbody>
              <% @postal_addresses.each do |postal_address| %>
                <tr>
                  <td>
                    <%= @postal_address.postal_code  %>
                  </td>
                  <td>
                    <%= @postal_address.postal_address  %>
                  </td>
                  <td>
                    <%= @postal_address.postal_name  %>
                  </td>
                  <td>
                    <%= link_to "編集する", edit_address_path(@postal_address)  %>
                  </td>
                  <td>
                    <%= link_to "削除する", address_path(@postal_address),method: :delete,data: {confirm: "本当に削除してもよろしいですか?"} %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
    </div>
  </div>
</div>