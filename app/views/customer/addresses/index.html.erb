<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5">
      <h2>配送先登録/一覧</h2>
      <%= form_with model:@postal_address,url: addresses_path, local:true do |f| %>
          <div class="form-group">
            <%= f.label :"郵便番号（ハイフンなし）:" %>
            <%= f.text_field :postal_code, class: "form-control code" %>
          </div>
          <div class="form-group">
            <%= f.label :"住所:" %>
            <%= f.text_field :postal_address, class: "form-control address" %>
          </div>
          <div class="form-group">
            <%= f.label :"宛名:" %>
            <%= f.text_field :postal_name, class: "form-control name" %>
          </div>
          <div class="form-group">
            <%= f.submit "新規登録" ,class: "btn btn-success" %>
          </div>
      <% end %>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div>
      <%= render "postal_index", postal_addresses: @postal_addresses %>
    </div>
  </div>
</div>